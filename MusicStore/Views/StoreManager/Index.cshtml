@model IEnumerable<MusicStore.Models.Album>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
@{
    ViewBag.Title = "Index";
}

            
            <div class="row">
                <div class="col-md-5">
                    <div class="input-group">
                        <input type="submit" class="input-group-add" id="searchbutton" value="SEARCH" />
                        <input type="text" id="search-box" class="form-control" placeholder="Search by Name" aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="col-md-1 text-info">
                    <a href="@Url.Action("Create", "StoreManager")" id="add">Create</a>
                </div>
            </div>
            <div class="clearfix">&nbsp;</div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped" id="tbdata">
                            <thead>
                                <tr class="success">
                                    <th class="text-center">@Html.DisplayNameFor(model => model.Title)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.Artist)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.Genre)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.Price)</th>
                                    <th class="text-center">Image</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="id">@item.Title</td>
                                        <td>@item.Artist.Name</td>
                                        <td>@item.Genre.Name</td>
                                        <td>@item.Price</td>
                                        <td>
                                            <img class="albumimg" src="@Url.Action("Verimagen", "Imagenes", new { id = item.AlbumId })" />
                                        </td>
                                        <td class="text-center"><a href="@Url.Action("Edit", "StoreManager", new { @id = @item.AlbumId })" class="openDialog-Edit">Edit</a></td>
                                        <td class="text-center"><a href="@Url.Action("Delete", "StoreManager", new { @id = @item.AlbumId })">Delete</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

